[core]
	autocrlf = input
	editor = cursor --wait
	excludesfile = ~/.gitignore
[alias]
	branch-name = rev-parse --abbrev-ref HEAD
	pub = !git push -u origin $(git branch-name)
	password = !reset-github-password
	redo = commit --amend --no-edit
	co = checkout
	gp = git push
	gc = git commit -m
	ga = git add
	gst = git status
