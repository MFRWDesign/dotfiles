#!/bin/zsh

if [ $# -eq 0 ]; then
  cd ~/.dotfiles
elif [ $1 = 'edit' ]; then
  (${VISUAL:-${EDITOR:-vi}} ~/.dotfiles)
elif [ $1 = 'pull' ]; then
  (git -C ~/.dotfiles pull --rebase --autostash)
elif [ $1 = 'reload' ]; then
  . ~/.zshrc
elif [ $1 = 'setup' ]; then
  (~/.dotfiles/script/setup)
else
  echo 'Usage:'
  echo '  dotfiles'
  echo '  dotfiles edit'
  echo '  dotfiles help'
  echo '  dotfiles pull'
  echo '  dotfiles reload'
  echo '  dotfiles setup'
fi
